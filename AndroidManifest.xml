<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.deusto.deustotech"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<!-- Phone call activity -->
	<uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
	
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:largeHeap="true">
        <activity
      		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name="es.deusto.deustotech.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="es.deusto.deustotech.capabilities.views.CapabilitiesActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.ButtonConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.EditTextConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.BrightnessConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.VolumeConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.MailSenderActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.PhoneCallActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.AdaptUI" >
        </activity>
               
    </application>
      
</manifest>
