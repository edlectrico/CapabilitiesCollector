<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.deusto.deustotech"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:largeHeap="true">
        <activity
      		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name="es.deusto.deustotech.pellet4android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="es.deusto.deustotech.capabilities.views.CapabilitiesActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.ButtonConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.EditTextConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.BrightnessConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.VolumeConfigActivity" >
        </activity>
        <activity android:name="es.deusto.deustotech.capabilities.views.MailSenderActivity" >
        </activity>
        
        
         <!-- AssistedCity-->
        <!-- Activities -->
        <activity
            android:name="es.deustotech.piramide.activities.PiramideCaptureActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.options.OptionsList"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.location.Directions"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name="es.deustotech.piramide.activities.location.Categories" 
			android:screenOrientation="landscape"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity
            android:name="es.deustotech.piramide.activities.location.Points"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="points" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.deustotech.piramide.activities.location.CurrentLocation"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.options.Settings"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.options.SettingsSimple"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.options.Help"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="es.deustotech.piramide.activities.options.HelpSimple"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <!-- Services -->
        <service android:name=".services.LocationService" >
            <intent-filter>
                <action android:name="prueba" />
            </intent-filter>
        </service>
    </application>

    <supports-screens android:largeScreens="true" />

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />
        
</manifest>
