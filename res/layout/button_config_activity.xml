<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="horizontal"
    android:rowCount="3" >

    <LinearLayout
        android:id="@+id/linear_layout_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="0" >

        <TextView
            android:id="@+id/label_button_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_info_message_es"
            android:textSize="25sp" />

    </LinearLayout>

    <View style="@style/Divider"/>
    
    <GridLayout
        android:id="@+id/relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="right|fill_vertical"
        android:layout_row="2"
        android:columnCount="1"
        android:rowCount="6" >

        <TextView
            android:id="@+id/textView1"
            android:layout_row="0"
            android:text="@string/message_info_es" />

        <GridLayout
            android:layout_width="250dp"
            android:layout_row="1"
            android:columnCount="1"
            android:rowCount="2" >

            <Button
                android:id="@+id/button_invert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:text="@string/button_invert_es" />
            
            <Button
                android:id="@+id/button_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:text="@string/button_restore_es" />
        </GridLayout>
        
        <View style="@style/Divider"/>
        
        <TextView
            android:id="@+id/textView2"
            android:layout_row="3"
            android:text="@string/message_resize_es" />
        
        
        <GridLayout
            android:layout_width="250dp"
            android:layout_row="4"
            android:columnCount="1"
            android:rowCount="3" >
        
            <Button
	            android:id="@+id/button_color"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="0"
	            android:layout_row="0"
	            android:text="@string/button_color_es" />
		
	        <Button
	            android:id="@+id/button_text_color"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="0"
	            android:layout_row="1"
	            android:text="@string/button_text_color_es" />
	        
	        <Button
		            android:id="@+id/button_background_color"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_column="0"
		            android:layout_row="2"
		            android:text="@string/button_background_color_es" />
        </GridLayout>
        
        <View style="@style/Divider"/>
        
        <Button
            android:id="@+id/button_next_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_row="5"
            android:text="@string/next_message_es" />
    </GridLayout>

</GridLayout>